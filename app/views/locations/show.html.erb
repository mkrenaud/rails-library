<% long = array[1] %>


<div id='map' style='width: 400px; height: 300px;'></div>
<script>
  var lat1 = <%= lat %>
  var long1 = <%= long %>
  mapboxgl.accessToken = 'pk.eyJ1IjoibWtyZW5hdWQiLCJhIjoiY2s2MHU3NXN2MGJ4bTNqcGs4MWZyejN4dyJ9.P1503rPR03lDpziXHVQt6Q';
  var map = new mapboxgl.Map({
    container: 'map',
    center: [long1, lat1],
    zoom: 15,
    style: 'mapbox://styles/mapbox/streets-v11'
  });
</script>
